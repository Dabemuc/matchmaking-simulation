      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "title": "Goroutines & Threads",
      "type": "timeseries",
      "interval": "0.25s",
      "description": "Displays the number of active Go routines and OS-level threads. A steady upward trend in Goroutines indicates a leak. A spike in OS Threads suggests the service is hitting blocking I/O (system calls/network) rather than Go-level concurrency limits.",
      "gridPos": {
        "h": 7,
        "w": 12,
        "x": 0,
        "y": 1
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      },
      "targets": [
        {
          "expr": "go_goroutines{job=\"gateway\"}",
          "legendFormat": "Goroutines"
        },
        {
          "expr": "go_threads{job=\"gateway\"}",
          "legendFormat": "OS Threads"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0
        }
      }
    },
    {
      "title": "CPU Usage",
      "type": "timeseries",
      "interval": "0.25s",
      "description": "Historical CPU usage relative to the GOMAXPROCS limit. If the line crosses the Hard Limit, the Go runtime is fully saturated.",
      "gridPos": {
        "h": 7,
        "w": 12,
        "x": 12,
        "y": 1
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      },
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{job=\"gateway\"}[1m]) / scalar(go_sched_gomaxprocs_threads{job=\"gateway\"})",
          "legendFormat": "Actual Usage (Ratio)"
        },
        {
          "expr": "vector(1)",
          "legendFormat": "Hard Limit (${max_procs_gateway} Cores)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1.2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "orange",
                "value": 0.8
              },
              {
                "color": "red",
                "value": 1.0
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Hard Limit (${max_procs_gateway} Cores)"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "fixedColor": "red",
                  "mode": "fixed"
                }
              },
              {
                "id": "custom.lineStyle",
                "value": {
                  "dash": [
                    5,
                    5
                  ],
                  "fill": "solid"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "title": "Memory",
      "type": "timeseries",
      "interval": "0.25s",
      "description": "Compares Heap Alloc (Go managed) vs Resident Set Size (OS managed). A widening gap suggests memory fragmentation or non-heap overhead.",
      "gridPos": {
        "h": 7,
        "w": 12,
        "x": 0,
        "y": 2
      },
      "options": {
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      },
      "targets": [
        {
          "expr": "go_memstats_heap_alloc_bytes{job=\"gateway\"}",
          "legendFormat": "Heap Alloc"
        },
        {
          "expr": "process_resident_memory_bytes{job=\"gateway\"}",
          "legendFormat": "Total RSS"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0
        }
      }
    },
